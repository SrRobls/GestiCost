<form action="/filter" method="get">
    <label for="category">Categoría:</label>
    <select name="category" id="category">
        <option value="">Todas</option>
        <option value="alimentos">Alimentos</option>
        <option value="transporte">Transporte</option>
        <!-- Buscar que otras categorias hay -->
    </select>

    <label for="minAmount">Monto Mínimo:</label>
    <input type="number" id="minAmount" name="minAmount" step="0.01">

    <label for="maxAmount">Monto Máximo:</label>
    <input type="number" id="maxAmount" name="maxAmount" step="0.01">

    <button type="submit">Filtrar</button>
</form>

<table>
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Categoría</th>
            <th>Monto</th>
        </tr>
    </thead>
    <tbody>
        {{#each transactions}}
        <tr>
            <td>{{this.date}}</td>
            <td>{{this.category}}</td>
            <td>{{this.amount}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
